# FireAPI Central Hub Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/fireapi_hub
REDIS_URL=redis://localhost:6379

# Hub Security
HUB_SECRET=your_super_secret_hub_key
SPOKE_AUTH_SECRET=your_spoke_authentication_secret

# Scraping Configuration
SCRAPING_ENABLED=true
PROXY_ROTATION=true
MAX_CONCURRENT_SCRAPES=10
SCRAPING_RATE_LIMIT=100

# Cross-Domain Intelligence
CROSS_DOMAIN_INTELLIGENCE=true
INTELLIGENCE_CACHE_TTL=3600

# Spoke Communication
SOCKET_IO_PORT=5001
INTER_SPOKE_MESSAGING=true